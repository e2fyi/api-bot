{
  "extends": ["eslint:recommended", "google", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": false,
        "jsxBracketSameLine": false
      }
    ],
    "brace-style": "off",
    "new-cap": [
      "error",
      {"capIsNewExceptions": ["Polymer", "PolymerVis", "OptionalMutableData"]}
    ],
    "no-var": "off",
    "require-jsdoc": "off",
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-console": ["error", {"allow": ["warn", "error"]}]
  },
  "globals": {
    "vega": true,
    "d3": true
  }
}
